[core]
  excludefiles = ~/.gitignore_global
  excludesfile = ~/.gitignore_global
  excludesfiles = ~/.gitignore_global
	editor = vim
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path = 
[color]
  diff = auto
  status = auto
  branch = auto
[alias]
  co = checkout
  a = add
  cm = commit -m
  cam = commit -am
  s = status
  l = log --pretty='%C(auto)%h %<(50,trunc)%s %C(black)%cr,% cN' --first-parent
  adall = add . --all
  edit = "!vim `git ls-files -m` -p"
  grep = grep -n
  reflog = reflog --pretty='%C(auto)%h %gd: %gs %C(black)%cr'
  frp = "!f() { \
    git fetch &&\
    git rebase origin/master &&\
    git push --force-with-lease;\
  }; f"
  pr = pull-request
  pf = push --force-with-lease
[push]
  default = simple
[include]
  path = ~/.gitconfig_local
[rebase]
	autosquash = true
