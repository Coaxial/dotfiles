{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "else",
          "return",
          "each",
          "for",
          "include",
          "mixin",
          "while",
          "extend"
        ]
      }
    ]
  }
}
